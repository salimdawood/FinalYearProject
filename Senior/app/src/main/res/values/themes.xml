<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VoiceCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/SecondaryColor</item>
        <item name="android:colorBackground">@color/PrimaryColor</item>
        <item name="colorPrimary">@color/SecondaryColor</item>
        <item name="colorOnPrimary">@color/PrimaryColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/SecondaryColor</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/SecondaryColor</item>
    </style>
    <style name="Dark_Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/PrimaryColor</item>
        <item name="android:colorBackground">@color/SecondaryColor</item>
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorOnPrimary">@color/SecondaryColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/SecondaryColor</item>
    </style>

</resources>